package components

templ ErrorPopup(err error) {
	<div id="popup" hx-swap-oob="true" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded fixed w-full z-10 flex justify-between" role="alert">
		<div>
			<strong class="font-bold">Error:</strong>
			<span class="block sm:inline">{ err.Error() }</span>
		</div>
		<button type="button" onclick="closePopup()"><i class="fa-solid fa-xmark"></i></button>
	</div>
}
